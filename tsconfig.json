{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@sanity/": [
        "sanity/"
      ],
      "@components/": [
        "src/app/components/"
      ],
      "@lib/": [
        "src/app/lib/"
      ],
      "@pages/": [
        "src/app/pages/"
      ]
    }
  },
  "include": [
    ".next/types//*.ts",
    "next-env.d.ts",
    "src//*.ts",
    "src//*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
